<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/read">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/read_capter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/read_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:scrollbars="vertical"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#fafafa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fafafa">

            <Button
                android:id="@+id/read_pre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上一章"/>
            <Button
                android:id="@+id/read_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="目录"/>
            <Button
                android:id="@+id/read_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下一章"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fafafa">

            <Button
                android:id="@+id/size_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="A-"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/btn1_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn1_circle"/>
            <Button
                android:id="@+id/btn2_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn2_circle"/>
            <Button
                android:id="@+id/btn3_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn3_circle"/>
            <Button
                android:id="@+id/btn4_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn4_circle"/>
            <Button
                android:id="@+id/btn5_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn5_circle"/>

            <Button
                android:id="@+id/size_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="A+"
                android:layout_weight="2"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>